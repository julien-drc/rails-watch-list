<h2><%= @list.name %></h2>

<%= link_to "comment", new_list_bookmark_path(@list), class:"btn btn-outline-primary" %>

<% @list.bookmarks.each do |bookmark| %>
<%= bookmark.movie.title %>
<%= bookmark.comment %>
